#!/bin/bash

rsync -aHAXv --numeric-ids --delete --progress \
--exclude "/tmp/*" \
--exclude "/export/*" \
--exclude "/array*/*" \
--exclude "/dev/*" \
--exclude "/proc/*" \
--exclude "/mnt/*" \
--exclude "/media/*" \
--exclude "/var/tmp/*" \
--exclude "/var/run/*" \
--exclude "/run/*" \
--exclude "/sys/*" \
/ /array0/backup/nodex/
