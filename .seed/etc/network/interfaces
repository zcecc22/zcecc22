auto lo
iface lo inet loopback

iface wlp3s0 inet dhcp
wpa-ssid ssid
wpa-psk password

iface enp1s0f0 inet manual
iface enp1s0f1 inet manual

auto br0
iface br0 inet static
bridge_ports enp1s0f0 enp1s0f1
address 192.168.178.2
netmask 255.255.255.0
gateway 192.168.178.1
up systemctl restart dnsmasq
up ip route add 192.168.178.0/24 dev br0 table bridge
up ip route add default via 192.168.178.1 table bridge
up ip rule add from 192.168.178.2 table bridge
down ip rule del from 192.168.178.2 table bridge
down ip route del default via 192.168.178.1 table bridge
down ip route del 192.168.178.0/24 dev br0 table bridge
